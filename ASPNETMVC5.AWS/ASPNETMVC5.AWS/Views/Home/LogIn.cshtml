
@model ASPNETMVC5.AWS.ViewModels.Accounts.UserLogInModel

@{
    ViewBag.Title = "Login";
}

<section id="loginform">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <div class="section-login">
                <h2 class="text-center">
                    <a href="/">
                        <img style="width:35px;" src="~/Assets/img/Icon.png" />
                    </a>
                Welcome back</h2>
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @role = "form" }))
                {
                    <div class="form-group">
                        @Html.Raw(ViewBag.Message)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Username</label>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username" })
                        @Html.ValidationMessageFor(model => model.Username)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @type = "password", placeholder = "Password", @value = Model.Password })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="RememberMe" id="RememberMe"> Remember me
                        </label>
                    </div>
                    <button type="submit" onclick="return true;" class="btn btn-small btn-primary">
                        <i class="fa fa-key"></i>
                        Login
                    </button>
                }
            </div>
        </div>
    </div>
</section>

