
@model ASPNETMVC5.AWS.ViewModels.Contacts.AddEditCustomerViewModel

@{
    ViewBag.Title = "Customer Details";
}

@section UserMenus
{
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Smart CRM", "Dashboard", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Customers", "List", "Customer")</li>
                    <li>@Html.ActionLink("Users", "List", "User")</li>
                    <li><a href="/smartcrm/myprofile">My Profile</a></li>
                    <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
}

@section BreadCrumb{
    <div class="row">
        <div class="col-md-10 col-sm-offset-1">
            <div class="page-header">
                <h3>Detail about-@Model.FirstName</h3>
                <div class="page-header-navigation">
                    <a class="btn btn-default" href="/customer/list">Back to customers</a>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-10 col-sm-offset-1">
        <div class="inner-wrapper">
            <ul class="list-group no-border">
                <li class="list-group-item custom-list-group-item"><strong>Name:</strong> @Model.FirstName @Model.LastName</li>
                <li class="list-group-item custom-list-group-item"><strong>Email:</strong> @Model.Email</li>
                <li class="list-group-item custom-list-group-item"><strong>Cellphone: </strong> @Model.CellPhone</li>
                <li class="list-group-item custom-list-group-item"><strong>Address:</strong> @Model.Address</li>
            </ul>
        </div>
    </div>
</div>